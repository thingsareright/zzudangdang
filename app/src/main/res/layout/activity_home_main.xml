<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_weight="8"
        android:layout_width="fill_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center|left">

                <ImageView
                    android:layout_weight="0.5"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:src="@drawable/pic_return"/>
                <LinearLayout
                    android:id="@+id/homeToSearch"
                    android:layout_weight="10"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:background="@drawable/roundview"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center">

                    <ImageView
                        android:layout_weight="0.5"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pic_search"/>
                    <TextView
                        android:layout_weight="0.5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="全部"/>
                    <EditText
                        android:id="@+id/home_search"
                        android:background="@null"
                        android:layout_weight="7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        />
                    <ImageView
                        android:layout_weight="0.5"
                        android:layout_marginEnd="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pic_cancel2"/>


                </LinearLayout>
            </LinearLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:orientation="vertical" >

                <com.jude.rollviewpager.RollPagerView
                    android:id="@+id/home_roll_view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    />

                <LinearLayout
                    android:id="@+id/viewGroup"
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_horizontal|bottom"
                    android:orientation="horizontal" >
                </LinearLayout>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <ImageView
                    android:id="@+id/homeimage1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/home1"
                    android:scaleType="fitXY"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/color_text_log"
                        android:text="图书"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/color_text_log"
                        android:text="电子书"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/color_text_log"
                        android:text="听书"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/color_text_log"
                        android:text="网络文学"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/color_text_log"
                        android:text="艺术品"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/color_text_log"
                        android:text="童书"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/color_text_log"
                        android:text="母婴"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/color_text_log"
                        android:text="玩具"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/color_text_log"
                        android:text="童装童鞋"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/color_text_log"
                        android:text="创意文具"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/color_text_log"
                        android:text="女装"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/color_text_log"
                        android:text="男装"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/color_text_log"
                        android:text="内衣配饰"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/color_text_log"
                        android:text="鞋靴箱包"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/color_text_log"
                        android:text="运动户外"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/color_text_log"
                        android:text="美妆个护"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/color_text_log"
                        android:text="食品"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/color_text_log"
                        android:text="中华特产"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/color_text_log"
                        android:text="家居优品"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/color_text_log"
                        android:text="珠宝手表"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/color_text_log"
                        android:text="家电"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/color_text_log"
                        android:text="Apple"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/color_text_log"
                        android:text="手机数码"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/color_text_log"
                        android:text="童书榜"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/color_text_log"
                        android:text="图书榜"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="#ffffff"
                        android:text="促销快讯" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="热卖 当当书籍"/>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:textColor="#ff0000"
                        android:text="更多" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/homeimage2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/home2"
                    android:scaleType="fitXY"
                    />
                <ImageView
                    android:id="@+id/homeimage3"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/home3"
                    android:scaleType="fitXY"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="15"
                        android:gravity="center"
                        android:text="—今日秒杀—"
                        android:textColor="#FF0000"
                        android:textSize="20sp" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <include layout="@layout/home_todayseckill" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">
                <ImageView
                    android:id="@+id/homeimage4"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/home4"
                    android:scaleType="fitXY"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="—全球最大中文图书城—"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="#ff0000"/>
                <ImageView
                    android:id="@+id/homeimage5"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/homelibrary"
                    android:scaleType="fitXY"
                    />

            </LinearLayout>
            <include layout="@layout/home_library"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="—服装鞋包—"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="#ff0000"/>

                <ImageView
                    android:id="@+id/homeimage6"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/homeclothes"
                    android:scaleType="fitXY"
                    />
            </LinearLayout>
            <include layout="@layout/home_clothes"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="—当当超市—"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="#ff0000"/>
                <ImageView
                    android:id="@+id/homeimage7"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/homesupermaket"
                    android:scaleType="fitXY"
                    />
            </LinearLayout>
            <include layout="@layout/home_supermaket"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="—当当优选—"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="#000"/>
                <ImageView
                    android:id="@+id/homeimage8"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ddcommend"
                    android:scaleType="fitXY"
                    />
            </LinearLayout>
            <include layout="@layout/home_ddcommend"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="—BABY—"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="#000"/>
                <ImageView
                    android:id="@+id/homeimage9"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/homebaby"
                    android:scaleType="fitXY"
                    />
            </LinearLayout>
            <include layout="@layout/home_baby"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="—CHILD—"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="#5f02ff"/>
            </LinearLayout>
            <include layout="@layout/home_child"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="—尾品汇—"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="#5f02ff"/>
            </LinearLayout>
            <include layout="@layout/home_weipinhui"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="- 根据您的偏好您可能喜欢 -"
                    android:textColor="#000"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:paddingTop="10dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:id="@+id/home_tohome"
            android:background="#ffffff"
            android:drawableTop="@mipmap/button_homepage"
            android:gravity="center"
            android:textSize="10dp"
            android:text="首页"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginTop="7dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/home_toCategary"
            android:background="#ffffff"
            android:drawableTop="@mipmap/button_classify"
            android:gravity="center"
            android:textSize="10dp"
            android:text="分类"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginTop="7dp"
            android:layout_height="match_parent"  />
        <Button
            android:id="@+id/home_toFind"
            android:background="#ffffff"
            android:drawableTop="@mipmap/button_find"
            android:gravity="center"
            android:textSize="10dp"
            android:text="发现"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginTop="7dp"
            android:layout_height="match_parent"  />
        <Button
            android:id="@+id/home_toShoppingcar"
            android:background="#ffffff"
            android:drawableTop="@mipmap/button_cart"
            android:gravity="center"
            android:textSize="10dp"
            android:text="购物车"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginTop="7dp"
            android:layout_height="match_parent"  />

        <Button
            android:id="@+id/home_toMine"
            android:background="#ffffff"
            android:drawableTop="@mipmap/button_my"
            android:gravity="center"
            android:textSize="10dp"
            android:text="我的"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginTop="7dp"
            android:layout_height="match_parent"
            />

    </LinearLayout>
</LinearLayout>


