<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50sp">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/back"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="商品订单"
            android:textColor="#000000"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="搜索"
            android:textColor="#707070"
            android:textSize="18sp"
            android:gravity="center"
            android:drawableRight="@mipmap/search"
            android:layout_toLeftOf="@+id/screen"
            android:paddingRight="10dp"/>
        <TextView
            android:id="@+id/screen"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="筛选"
            android:textColor="#707070"
            android:textSize="18sp"
            android:gravity="center"
            android:drawableRight="@mipmap/screen"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="全部"
            android:textSize="20sp"
            android:textColor="#ff4500"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="待付款"
            android:textSize="20sp"
            android:textColor="#000000"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="待发货"
            android:textSize="20sp"
            android:textColor="#000000"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="待收货"
            android:textSize="20sp"
            android:textColor="#000000"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="待评价"
            android:textSize="20sp"
            android:textColor="#000000"
            android:gravity="center"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40sp">
        <TextView
            android:id="@+id/B_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="正浩图书专营店>"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="#000000"
            android:drawableLeft="@mipmap/dianpu"
            android:paddingLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="取消"
            android:textSize="15sp"
            android:textColor="#ff4500"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"/>
    </RelativeLayout>
    <android.support.v7.app.AlertController.RecycleListView
        android:id="@+id/recycleview1_lj"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v7.app.AlertController.RecycleListView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40sp">
        <TextView
            android:id="@+id/price1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="￥353.00"
            android:textSize="13sp"
            android:textColor="#000000"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"/>
        <TextView
            android:id="@+id/Tprice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="总价："
            android:textSize="13sp"
            android:textColor="#454545"
            android:layout_toLeftOf="@+id/price1"
            android:paddingRight="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="共1件商品"
            android:textSize="13sp"
            android:textColor="#000000"
            android:layout_toLeftOf="@+id/Tprice"
            android:paddingRight="10dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50sp">
        <TextView
            android:id="@+id/Dorder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="删除订单"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_alignParentRight="true"
            android:background="@drawable/setbar3_bg"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/Crefund"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="查看退款"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_toLeftOf="@+id/Dorder"
            android:layout_marginRight="10dp"
            android:background="@drawable/setbar3_bg"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="相似商品"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_toLeftOf="@+id/Crefund"
            android:layout_marginRight="10dp"
            android:background="@drawable/setbar3_bg"/>
    </RelativeLayout>

</LinearLayout>